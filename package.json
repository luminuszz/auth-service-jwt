{
	"name": "auth-api-go-finances",
	"version": "0.0.1",
	"description": "",
	"author": "",
	"private": true,
	"license": "UNLICENSED",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "nest build",
		"format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
		"start": "yarn prisma migrate dev && nest start",
		"start:dev": "nest start --watch",
		"start:debug": "nest start --debug --watch",
		"start:prod": "node dist/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./test/jest-e2e.json",
		"prisma": "export DB_HOST=localhost && npx prisma",
		"prisma:docker": "docker exec app_api export DB_HOST=db_go_finances && npx prisma db push",
		"docker:restart_modules": "docker exec app_api rm -rf node_modules && yarn"
	},
	"dependencies": {
		"@nestjs/common": "^7.6.15",
		"@nestjs/config": "^1.0.0",
		"@nestjs/core": "^7.6.15",
		"@nestjs/jwt": "^8.0.0",
		"@nestjs/passport": "^8.0.0",
		"@nestjs/platform-express": "^7.6.15",
		"@nestjs/swagger": "^5.0.4",
		"@prisma/client": "2.27.0",
		"bcryptjs": "^2.4.3",
		"class-transformer": "^0.4.0",
		"class-validator": "^0.13.1",
		"date-fns": "^2.22.1",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"reflect-metadata": "^0.1.13",
		"rimraf": "^3.0.2",
		"rxjs": "^6.6.6"
	},
	"devDependencies": {
		"@nestjs/cli": "^7.6.0",
		"@nestjs/schematics": "^7.3.0",
		"@nestjs/testing": "^7.6.15",
		"@types/bcryptjs": "^2.4.2",
		"@types/express": "^4.17.11",
		"@types/jest": "^26.0.22",
		"@types/multer": "^1.4.7",
		"@types/node": "^14.14.36",
		"@types/passport-jwt": "^3.0.6",
		"@types/supertest": "^2.0.10",
		"@typescript-eslint/eslint-plugin": "^4.19.0",
		"@typescript-eslint/parser": "^4.19.0",
		"add": "^2.0.6",
		"eslint": "^7.22.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-prettier": "^3.4.0",
		"jest": "^26.6.3",
		"prettier": "^2.3.2",
		"prisma": "2.27.0",
		"supertest": "^6.1.3",
		"ts-jest": "^26.5.4",
		"ts-loader": "^8.0.18",
		"ts-node": "^9.1.1",
		"tsconfig-paths": "^3.9.0",
		"typescript": "^4.2.3",
		"yarn": "^1.22.10"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "../coverage",
		"testEnvironment": "node"
	}
}
